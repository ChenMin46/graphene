#!$(PAL)

loader.preload = file:$(SHIMPATH)
loader.exec = file:build/bin/hunspell
loader.env.LD_LIBRARY_PATH = /build/lib:/lib:/lib/x86_64-linux-gnu:/usr/lib:/usr/lib/x86_64-linux-gnu
loader.env.GCONV_PATH = /
# loader.debug_type = inline

fs.mount.lib.type = chroot
fs.mount.lib.path = /lib
fs.mount.lib.uri = file:$(LIBCDIR)

fs.mount.lib64.type = chroot
fs.mount.lib64.path = /lib/x86_64-linux-gnu
fs.mount.lib64.uri = file:/lib/x86_64-linux-gnu

fs.mount.usr.type = chroot
fs.mount.usr.path = /usr
fs.mount.usr.uri = file:/usr

fs.mount.tmp.type = chroot
fs.mount.tmp.path = /tmp
fs.mount.tmp.uri = file:/tmp

sys.stack.size = 256K
sys.brk.size = 4M
glibc.heap_size = 16M

sgx.search_trusted_libs.libc = file:$(LIBCDIR)
sgx.search_trusted_libs.hunspell = file:build/lib
sgx.trusted_files.gconv = file:gconv-modules
sgx.trusted_files.ISO88591 = file:ISO8859-1.so
sgx.allowed_files.dict = file:en_US
sgx.allowed_files.samples = file:samples
